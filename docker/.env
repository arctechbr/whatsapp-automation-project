# ============ Database Configuration ============
DB_USER=automation_user
DB_PASSWORD=secure_password_change_me
DB_NAME=whatsapp_automation

# ============ Whapi.Cloud Configuration ============
# Obtenha sua chave de API em: https://whapi.cloud
WHAPI_API_KEY=seu_whapi_api_key_aqui
WHAPI_API_URL=https://api.whapi.cloud

# ============ Bot Numbers ============
# Números de telefone com código de país, sem + ou espaços
# Exemplo: 5511999999999 (Brasil, São Paulo)
BOT_READER_NUMBER=5511999999999
BOT_POSTER_NUMBER=5511888888888

# ============ Source Group ============
# ID do grupo de origem (onde ler anúncios)
# Formato: 120363123456789@g.us
SOURCE_GROUP_ID=120363123456789@g.us

# ============ Server Configuration ============
ENVIRONMENT=production
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ============ CORS Configuration ============
# URLs permitidas para requisições CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://seu-dominio.com

# ============ JWT Configuration ============
# Gere uma chave secreta segura: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=sua_chave_secreta_super_segura_aqui_mude_isso

# ============ Frontend Configuration ============
VITE_API_URL=http://localhost:8000
